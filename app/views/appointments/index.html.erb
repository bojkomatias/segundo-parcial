<div class="flex flex-row ">
  <div class="flex flex-col w-full">
  <div class="-my-2 overflow-x-auto">
    <div class="py-2 align-middle inline-block min-w-full p-1">
      <div class="mt-12 shadow-2xl overflow-hidden border-2 border-gray-600 sm:rounded-lg bg-gray-500">
        <div class="text-center text-3xl my-3 font-semibold font-sans">Centros de Salud</div>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-400 text-green-700">
              <th class="px-6 py-3 text-left font-medium uppercase tracking-wider" ><%= link_to '<div> Fecha <></div>'.html_safe, appointments_path(:sort => true, :by => "date", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
              <th scope="col" class="px-6 py-3 text-left font-medium uppercase tracking-wider">
                Centro de Salud
              </th>
              <th scope="col" class="px-6 py-3 text-left font-medium  uppercase tracking-wider">
                Trabajador
              </th>
              <th scope="col" class="px-6 py-3 text-left font-medium uppercase tracking-wider">
                Opciones
              </th>
             <tr>
          </thead>

          <tbody class="bg-gray-300 divide-y divide-gray-800 text-black">
            <% @appointments.each do |appointment| %>
                <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium ">
                        <%= appointment.date %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium ">
                        <%= appointment.medical_center.name %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium ">
                        <%= appointment.worker.last_name %>
                      </div>
                    </div>
                  </div>
                </td>
              
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium">
                         <%= link_to 'Show', appointment %>
                          <%= link_to 'Edit', edit_appointment_path(appointment) %>
                          <%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    </div>
                  </div>
                </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

<button class="mx-8 my-2 w-1/3 flex justify-center p-1 border border-transparent font-medium rounded-md text-white bg-green-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800 "> 
<%= link_to 'New appointment', new_appointment_path %>
</button>

