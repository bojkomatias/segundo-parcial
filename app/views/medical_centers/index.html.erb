<div class="flex flex-row text-sm">
  <div class="flex flex-col w-full">
  <div class="-my-2 overflow-x-auto">
    <div class="py-2 align-middle inline-block min-w-full p-1">
      <div class="mt-12 shadow-2xl overflow-hidden border-2 border-gray-600 sm:rounded-lg bg-gray-500">
        <div class="text-center text-2xl my-3 font-semibold font-sans">Centros de Salud</div>
         <form class='flex w-1/2 p-6' method="GET" action="/administrators"> 
            <input name="search" class="appearance-none relative block w-full px-3 py-2 bg-gray-700 placeholder-gray-200 text-white rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 " placeholder=' Name...' />
            <button type="submit" class="mx-4 w-1/3 flex justify-center py-2 px-4 border border-transparent font-medium rounded-md text-white bg-green-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800 "> Search </button>
          </form>
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-400 text-green-700">
              <th class="px-2 py-3 text-left font-medium uppercase tracking-wider" ><%= link_to '<div> Nombre &#x2195; </div>'.html_safe, administrators_path(:sort => true, :by => "first_name", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
              <th scope="col" class="px-6 py-3 text-left font-medium uppercase tracking-wider">
                Descripcion
              </th>
              <th scope="col" class="px-6 py-3 text-left font-medium  uppercase tracking-wider">
                Direccion
              </th>
              <th scope="col" class="px-6 py-3 text-left font-medium  uppercase tracking-wider">
                Telefono
              </th>
              <th scope="col" class="px-6 py-3 text-left font-medium uppercase tracking-wider">
                Tipo
              </th>
              <th scope="col" class="px-6 py-3 text-left font-medium uppercase tracking-wider">
                Cantidad de Turnos
              </th>
              <th scope="col" class="px-6 py-3 text-left font-medium uppercase tracking-wider">
                Cantidad de Guardias
              </th>
                        <% if user_signed_in? %>
              <th scope="col" class="px-6 py-3 text-left font-medium uppercase tracking-wider">
                Opciones
              </th>
              <%end%>
             <tr>
          </thead>

          <tbody class="bg-gray-300 divide-y divide-gray-800 text-black">
              <% @medical_centers.each do |medical_center| %>
                <tr>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium ">
                        </strong><%= medical_center.name %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" text-xs">
                        <%= medical_center.description %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium">
                        <%= medical_center.address %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium">
                        <%= medical_center.phone %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium">
                        <%= medical_center.medical_center_type.name %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium">
                        <%= medical_center.appointments.count %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium">
                        <%= medical_center.guards.count %>
                      </div>
                    </div>
                  </div>
                </td>
                        <% if user_signed_in? %>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="ml-4">
                      <div class=" font-medium">
                        <%= link_to 'Show', medical_center %>
                        <%= link_to 'Edit', edit_medical_center_path(medical_center) %>
                        <%= link_to 'Destroy', medical_center, method: :delete, data: { confirm: 'Are you sure?' } %>
                       
                      </div>
                    </div>
                  </div>
                </td>
                        <%end%>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>

<button class="mx-8 my-2 w-1/3 flex justify-center py-2 px-4 border border-transparent font-medium rounded-md text-white bg-green-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-800 ">  <%= link_to 'New Medical Center', new_medical_center_path %> </button>

